<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="190px"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170px"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="@color/colorlinedarker_gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:layout_gravity="bottom"
            android:layout_marginTop="25px"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/tab1"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_zichang"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_home_pre"
                    android:layout_width="27.0dip"
                    android:layout_height="27.0dip"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_zichang_pre"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="资产"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_zichang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="资产"
                    android:textSize="30px"
                    android:textColor="@color/main_blue_light"
                    android:visibility="visible" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/tab2"
                android:layout_width="fill_parent"
                android:layout_height="48.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_wode"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/btn_wode_pre"
                    android:layout_width="80px"
                    android:layout_height="80px"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="1.0dip"
                    android:src="@mipmap/ic_wode_pre"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="我的"
                    android:textSize="30px"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_wode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="6.0dip"
                    android:text="我的"
                    android:textColor="@color/main_blue_light"
                    android:textSize="30px"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="18.0dip"
                    android:layout_height="20.0dip"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:background="@mipmap/ic_launcher"
                    android:gravity="center_vertical"
                    android:paddingBottom="0.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="0.0dip"
                    android:paddingTop="0.0dip"
                    android:text=" "
                    android:textColor="#ffffffff"
                    android:textSize="13.0dip"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomtext"
        android:layout_below="@+id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="650px"
                android:background="@mipmap/gannan01" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:background="@mipmap/gannan04" />

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@color/lineBlackColor" />

            <LinearLayout
                android:layout_marginTop="10px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25px"
                        android:onClick="onClick"
                        android:text="行程行情"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/btn01_bottom"
                        android:layout_width="160px"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25px"
                        android:onClick="onClick"
                        android:text="在线优惠"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/btn02_bottom"
                        android:layout_width="160px"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/black"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25px"
                        android:onClick="onClick"
                        android:text="男女比例"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/btn03_bottom"
                        android:layout_width="160px"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/black"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25px"
                        android:onClick="onClick"
                        android:text="年龄结构"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/btn04_bottom"
                        android:layout_width="160px"
                        android:layout_height="2dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:background="@color/black"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lineBlackColor" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img01"
                    android:layout_width="match_parent"
                    android:layout_height="1200px"
                    android:background="@mipmap/gannan02" />

                <ImageView
                    android:id="@+id/img02"
                    android:layout_width="match_parent"
                    android:layout_height="600px"
                    android:background="@mipmap/dibiaozhilv02"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img03"
                    android:layout_width="match_parent"
                    android:layout_height="900px"
                    android:background="@mipmap/dibiaozhilv03"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img04"
                    android:layout_width="match_parent"
                    android:layout_height="700px"
                    android:background="@mipmap/dibiaozhilv04"
                    android:visibility="gone" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/bottomtext"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="@color/fontBlueColor"
        android:gravity="center"
        android:text="立即报名"
        android:textColor="@android:color/white" />
</RelativeLayout>
